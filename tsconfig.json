{
    "compileOnSave": true,
    "buildOnSave": true,
    "compilerOptions": {
        "target": "es6",
        "module": "commonjs",
        "outDir": "build",
        "noImplicitAny": true,
        "typeRoots": [
            "../node_modules/@types"
        ],
        "types":[
            "node"
        ]
    },
    "include": [
        "server/**/*.ts",
        "server/*.ts"
    ],
    "exclude": [
        "node_modules"
    ]
}